<div id="jumbotron" class="p-5 text-white rounded">
        <% if user_signed_in? %>
        <h1 id="home_title" class="text-center"> Hello <%= current_user.first_name %> ! Welcome to Eventbrite Strasbourg </h1>
        <% else %>
        <h1 id="home_title" class="text-center"> Hello stranger ! Welcome to Eventbrite Strasbourg </h1>
        <% end %>
        <h2 class="text-center"> You can create an event <a <%=link_to "here", new_event_path %></a></h2>
</div>

<h3 id="view_all" class="text-center"> View All Events :</h3>

<div id="section_cards">
    <% @events.each do |event| %>
        <div id="section_cards">
            <div class="card border-0" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= event.title %></h5>
                    <a class="lien_read" href="event_path(:id)">Show details</a>
                    
                </div>
            </div>
        </div>
    <% end %>
</div>